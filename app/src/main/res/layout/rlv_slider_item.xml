<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
   >

    <com.saysay.ljh.customview.widgets.LoopViewPager
        android:id="@+id/lvp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.saysay.ljh.customview.widgets.LoopViewPager>

    <com.saysay.ljh.customview.widgets.PointIndicator
        android:id="@+id/pi_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lvp_main"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"></com.saysay.ljh.customview.widgets.PointIndicator>
</RelativeLayout>